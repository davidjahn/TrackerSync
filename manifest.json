{
  "manifest_version": 2,

  "name": "TrackerSync",
  "description": "This extension shows a syncs your public and private pivotaltracker columns",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.pivotaltracker.com/*"],
      "js": [ "main.js", "run.js", "popup.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": ["main.js", "snippets.html"]
}
